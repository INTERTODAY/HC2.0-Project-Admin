<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li {{#if (isEquals current_path 'Home')}}class="active"{{/if}}>
                <a href="/home">
                    <i class="fa fa-home"></i>
                    <span>Home</span>
                </a>
            </li>
            <li {{#if (isEquals current_path 'Game Report')}}class="active"{{/if}}>
                <a href="/report/game">
                    <i class="fa fa-gamepad"></i>
                    <span>Game Report</span>
                </a>
            </li>
            <li {{#if (isEquals current_path 'Financial Report')}}class="active"{{/if}}>
                <a href="/report/financial">
                    <i class="fa fa-money" aria-hidden="true"></i>
                    <span>Financial Report</span>
                </a>
            </li>

          {{#unless (isEquals loggedIn.layer 3)}}
              <li {{#if (isEquals current_path 'Agents')}}class="active"{{/if}}>
                  <a href="/agents">
                      <i class="fa fa-user" aria-hidden="true"></i>
                      <span>Agents</span>
                  </a>
              </li>
          {{/unless}}

            <li {{#if (isEquals current_path 'Players')}}class="active"{{/if}}>
                <a href="/players">
                    <i class="fa fa-users" aria-hidden="true"></i>
                    <span>Players</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>