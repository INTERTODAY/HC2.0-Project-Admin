<div class="right_col" id="body_bc_calendar" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="dashboard_graph">

                <div class="row x_title">
                    <div class="col-md-6 col-lg-6">
                        <h3>방송 편성표 등록</h3>
                    </div>

                    <div class="col-md-6 col-lg-6">
                        <div class="pull-right">
                            <button class="btn btn-success" data-toggle="modal" data-target="#registerCalendar">
                                <i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;&nbsp;
                                방송 편성표 업로드
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12 col-xs-12">

                    <div class="row top_tiles">
                        <div class="_animated flipInY col-md-12 col-sm-12 col-xs-12">

                            {{#each result}}
                                <div class="thumbnail " style="height:100%">
                                    <img src="https://holdemclub.s3.ap-northeast-2.amazonaws.com/broadcast/calendar/{{img_name}}" alt="...">
                                    <div class="caption">
                                        <h3>{{title}}</h3>
                                        <p>

                                            <button class="btn btn-danger btn_delete" data-id="{{id}}">삭제</button>
                                            {{#if active}}
                                                <button class="btn btn-primary btn_calendar_delete" data-id="{{id}}" data-active="0">InActive</button>
                                            {{else}}
                                                <button class="btn btn-info btn_calendar_active" data-id="{{id}}" data-active="1">Active</button>
                                            {{/if}}
                                        </p>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>

                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>
</div>



{{>modal_bc_calendar_register}}