                    <!--</select>-->
                <!--</span>-->

                <!--<a href="/report/game" class="btn btn-info btn-clear"><i class="fa fa-eraser" aria-hidden="true"></i> Clear</a>-->
                <a href="#" class="btn btn-default pull-right btn_download_csv_financial" download="financial_info.csv">
                    <i class="fa fa-download"></i>&nbsp;&nbsp; CSV
                </a>

                <form action="/players/history" method="get" class="blind frm_search">
                    <input type="hidden" name="startDt" id="startDt" />
                    <input type="hidden" name="endDt" id="endDt" />
                    <input type="hidden" name="username" id="username" value="{{player}}"/>
                </form>

            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="table_financial" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th class="center">Date</th>
                        <th class="center">Credit</th>
                        <th class="center">Debit</th>
                        <th class="center">Fee</th>
                        <th class="center">Ruby</th>
                        <th class="center">Desc.</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each data}}
                    <tr>
                        <td align="center">{{stime date}}</td>
                        {{#if credit}}
                        <td align="right">{{credit}}</td>
                        {{else}}
                        <td align="center" class="empty"></td>
                        {{/if}}
                        {{#if debit}}
                        <td align="right">{{debit}}</td>
                        {{else}}
                        <td align="center" class="empty"></td>
                        {{/if}}
                        {{#if fee}}
                        <td align="right">{{fee}}</td>
                        {{else}}
                        <td align="center" class="empty"></td>
                        {{/if}}
                        {{#if ruby}}
                        <td align="right">{{ruby}}</td>
                        {{else}}
                        <td align="center" class="empty"></td>
                        {{/if}}
                        <td align="right">
                        {{#if actor}}<span class="badge bg-green">A</span> &nbsp; {{actor}}{{/if}}
                        </td>
                    </tr>
                    {{/each}}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th class="center">Date</th>
                        <th class="center">Credit</th>
                        <th class="center">Debit</th>
                        <th class="center">Fee</th>
                        <th class="center">Ruby</th>
                        <th class="center">Desc.</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
