<!-- 공통으로 모달을 사용할 수 있도록 변경할 것 -->
<!-- Modal 에이전트를 생성할 경우 -->
<div class="modal" id="modal_credit_to" role="dialog" tabindex="-1">
    <form class="modal-dialog" method="post" action="/api/v1/agent/credit/to" id="frm_credit_to">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Credit to Agent</h4>
            </div>
            <div class="modal-body">
                <div class="clearfix">
                    <a href="#none" class="btn-get-agent-current-balance pull-right"><i class="fa fa-refresh"></i> &nbsp; Reload to fecth recent data.</a>
                </div>

                <div>
                    <fieldset class="well the-fieldset">
                        <legend class="the-legend">My Info</legend>
                        <div class="col-md-8">
                            <label class="control-label">My Code</label>
                            <input type="text" class="form-control" readonly required autocomplete="off" value="{{loggedIn.agent}}"/>
                        </div>
                        <div class="col-md-4">
                            <label>My Balance</label>
                            <input type="text" class="form-control my_balance txt-align-right" readonly required autocomplete="off" value="{{loggedIn.balance}}"/>
                        </div>
                    </fieldset>
                </div>

                <div>
                    <fieldset class="well the-fieldset">
                        <legend class="the-legend">Target Info</legend>

                        <div class="form-group">
                            <div class="col-md-12">
                                <label class="control-label">Target Agent</label>
                                <input type="text" class="form-control target_agent_code" name="target" id="credit_target" readonly required autocomplete="off" value=""/>
                            </div>
                        </div>

                        <br />

                        <div class="form-group" style="margin-top: 35px;">
                            <div class="col-md-3">
                                <label>Balance</label>
                                <input type="text" class="form-control target_current_balance txt-align-right" name="balance" id="credit_balance" readonly required autocomplete="off"  value=""/>
                            </div>
                            <div class="col-md-1"><span class="calcLetter">+</span></div>
                            <div class="col-md-3">
                                <label>Amount</label>
                                <input type="text" class="form-control amount_to_agent txt-align-right" name="amount" id="sumCredit" required autocomplete="off" value="" placeholder="0" />
                            </div>
                            <div class="col-md-1"><span class="calcLetter">=</span></div>
                            <div class="col-md-4">
                                <label>Total Balance</label>
                                <input type="text" class="form-control sum_balance txt-align-right"  name="sum_balance" id="credit_sum_balance" readonly required autocomplete="off" placeholder="0" />
                            </div>
                        </div>

                    </fieldset>
                </div>

                <div class="form-group">
                    <label>Memo</label>
                    <input type="text" class="form-control" name="memo" id="memo" required autocomplete="off" placeholder="Memorize about your action on this field." />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary btn-credit-to-submit">Confirm</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </form>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
