<div class="modal fade" id="modifyVideo" tabindex="-1" role="dialog" aria-labelledby="myMomyModalLabeldalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">비디오 수정</h4>
            </div>
            <div class="modal-body">
                <!-- modal body -->
                <form id="form_video_modify" action="/api/v1/video" enctype="multipart/form-data"  method="">

                    <input type="hidden" class="method" value="PUT">
                    <input type="hidden" name="channel_id" value="{{channel_id}}">
                    <input type="hidden" name="video_id" id="video_id" value="">

                    <fieldset class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Insert Ttile" required autocomplete="off"/>
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="link">Link</label>
                        <input type="text" class="form-control" name="link" id="link"  placeholder="Insert Link" required autocomplete="off"/>
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="image">Thumbnail</label>
                        <input class="form-control" type="file" name="thumbnail" accept="image/*">
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="image">Thumbnail_m</label>
                        <input class="form-control" type="file" name="thumbnail_m" accept="image/*">
                    </fieldset>


                    <fieldset class="form-group">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" id="submit_video_modify">Add</button>
                        </div>
                    </fieldset>

                </form>
                <!-- // modal body -->
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div><!-- /.modal -->
