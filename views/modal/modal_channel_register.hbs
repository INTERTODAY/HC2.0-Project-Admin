<div class="modal fade" id="registerChannel" tabindex="-1" role="dialog" aria-labelledby="myMomyModalLabeldalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">채널등록</h4>
            </div>
            <div class="modal-body">
                <!-- modal body -->
                <form id="form_event_upload" action="/api/v1/channel" enctype="multipart/form-data"  method="post">

                    <fieldset class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" name="title"  placeholder="Insert Ttile" required autocomplete="off"/>
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="image">Thumbnail</label>
                        <input class="form-control" type="file" name="img_files[]" accept="image/*">
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="image">Thumbnail_m</label>
                        <input class="form-control" type="file" name="img_files[]" accept="image/*">
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="image">Logo</label>
                        <input class="form-control" type="file" name="img_files[]" accept="image/*">
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="image">Logo_m</label>
                        <input class="form-control" type="file" name="img_files[]" accept="image/*">
                    </fieldset>


                    <div class="form-group">
                        <label for="type">Type</label>
                        <select class="form-control" name="type" required>
                            <option value="G">단독채널</option>
                            <option value="U">종속채널</option>
                            <option value="S">대표체널</option>
                        </select>
                    </div>

                    <fieldset class="form-group">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" id="submit_channel_upload">Add</button>
                        </div>
                    </fieldset>
                </form>
                <!-- // modal body -->
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div><!-- /.modal -->
