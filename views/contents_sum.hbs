<div class="right_col" id="body_content" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="dashboard_graph">

                <div class="row x_title">
                    <div class="col-md-6 col-lg-6">
                        <h3>요약 컨텐츠 관리</h3>
                    </div>

                    <div class="col-md-6 col-lg-6">
                        <div class="pull-right">
                            <button class="btn btn-success" data-toggle="modal" data-target="#registerEvent">
                                <i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;&nbsp;
                                컨텐츠 등록
                            </button>
                        </div>
                    </div>
                </div>

                <div class="row">
                    {{#each result}}
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail" style="height: 100%">
                                <img src="http://static.holdemclub.tv/channel/{{channel_id}}/{{video_id}}/thumbnail" alt="" />
                                <div class="caption text-center">
                                    {{#unless active}}
                                    <button class="btn btn-danger btn_content_delete" data-id="{{id}}" role="button">삭제</button>
                                    {{/unless}}
                                    {{#if active}}
                                    <button class="btn btn-primary btn_active" data-id="{{video_id}}" data-active="0">비활성화</button>
                                    {{else}}
                                    <button class="btn btn-info btn_active" data-id="{{video_id}}" data-active="1">활성화</button>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

