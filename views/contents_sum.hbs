<div class="right_col" id="body_content" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="dashboard_graph">

                <div class="row x_title">
                    <div class="col-md-6 col-lg-6">
                        <h3>요약 컨텐츠 관리</h3>
                    </div>

                    <div class="col-md-6 col-lg-6">
                        <div class="pull-right">
                            <button class="btn btn-success" data-toggle="modal" data-target="#registerEvent">
                                <i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;&nbsp;
                                컨텐츠 등록
                            </button>
                        </div>
                    </div>
                </div>

                <!--<div class="x_content" style="display: block;">-->

                <div class="row">
                    {{#each result}}

                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail" style="height: 100%">
                                <img src="https://s3.ap-northeast-2.amazonaws.com/holdemclub/channel/{{ref_id}}/thumbnail" alt="image"/>
                                <div class="caption text-center">
                                    <button class="btn btn-danger btn_content_delete" data-id="{{id}}" role="button">삭제</button>
                                    {{#if active}}
                                        <button class="btn btn-primary" data-id="{{id}}" role="button">InActive</button>
                                    {{else}}
                                        <button class="btn btn-info" data-id="{{id}}" role="button">Active</button>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

