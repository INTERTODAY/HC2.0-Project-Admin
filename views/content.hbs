<div class="right_col" id="body_content" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="dashboard_graph">

                <div class="row x_title">
                    <div class="col-md-6 col-lg-6">
                        <h3>컨텐츠 관리</h3>
                    </div>

                    <div class="col-md-6 col-lg-6">
                        <div class="pull-right">
                            <button class="btn btn-success" data-toggle="modal" data-target="#registerEvent">
                                <i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;&nbsp;
                                컨텐츠 등록
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12 col-xs-12">

                    {{#each result}}
                        <div class="row top_tiles">
                            <div class="_animated flipInY col-md-12 col-sm-12 col-xs-12">
                                <div class="tile-stats col-md-12">
                                    <div class="icon"><i class="fa fa-close"></i></div>
                                    <div class="count">{{showContentType type}}</div>
                                    <h3>{{!showContentType type}}</h3>
                                    <p>
                                        <button class="btn btn-success btn_content_modify" data-id="{{id}}"  data-toggle="modal" data-target="#modifyContent"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;&nbsp;수정</button>
                                        <button class="btn btn-danger btn_content_delete" data-id="{{id}}" role="button">삭제</button>
                                    </p>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

{{>modal_content_register}}
{{>modal_content_modify}}