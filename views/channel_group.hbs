<div class="right_col" id="body_content" role="main">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="dashboard_graph">


                <form id="form_channel_group" action="/api/v1/channel/group" method="post">
                    <div class="row x_title">
                        <h3>대표 체널
                            <button class="btn btn-success pull-right" id="submit_channel_group" type="submit">그룹화</button>
                        </h3>
                    </div>

                    <!--<div class="x_content" style="display: block;">-->


                    <div class="row">
                        {{#each result_special}}
                            <div class="col-sm-6 col-md-3 col-lg-3">
                                <div class="thumbnail" style="height: 100%">
                                    <input type="checkbox" value="{{group_id}}" name="channel_rt_group_id"/>
                                    <img src="https://s3.ap-northeast-2.amazonaws.com/holdemclub/channel/{{channel_id}}/thumbnail" alt="channel thumbnail"/>
                                    <div class="caption">
                                        <div class="caption text-center">
                                            <h5 class="text-nowrap">{{title}}</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>


                    <div class="row x_title">
                        <div class="col-md-6 col-lg-6">
                            <h3>일반 채널</h3>
                        </div>
                    </div>

                    <div class="row">
                        {{#each result_general}}

                            <div class="col-sm-6 col-md-3 col-lg-3">
                                <div class="thumbnail" style="height: 100%">
                                    <input type="checkbox" value="{{channel_id}}" name="channel_id"/>
                                    <img src="https://s3.ap-northeast-2.amazonaws.com/holdemclub/channel/{{channel_id}}/thumbnail" alt="channel thumbnail"/>
                                    <div class="caption">
                                        <div class="caption text-center">
                                            <h5 class="text-nowrap">{{title}}</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </form>

                <div class="row x_title">
                    <div class="col-md-6 col-lg-6">
                        <h3>하위 채널</h3>
                    </div>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </ul>
                </div>

                <div class="row">
                    {{#each result_under}}

                        <div class="col-sm-6 col-md-3 col-lg-3">
                            <div class="thumbnail" style="height: 100%">
                                <img src="https://s3.ap-northeast-2.amazonaws.com/holdemclub/channel/{{channel_id}}/thumbnail" alt="channel thumbnail"/>
                                <div class="caption">
                                    <div class="caption text-center">
                                        <h5 class="text-nowrap">{{title}}</h5>
                                        <button class="btn btn-danger btn-block btn_channel_ungroup" data-channel-id="{{channel_id}}">그룹해제</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

{{>modal_channel_group}}
